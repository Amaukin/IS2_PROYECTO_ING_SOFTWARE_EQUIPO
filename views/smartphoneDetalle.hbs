<div class="detailPage">

    <div class="container mb-5 pt-5">
        <div class="row">
            <div class="col d-flex align-items-center">
                <img class="card-img-top" style="height: 540px; width: auto; display:block; margin: 0 auto;" src="{{smartphone.imagen}}"
                    onerror="this.src='https://www.kindpng.com/picc/m/52-526072_unknown-character-hd-png-download.png'">
            </div>
            <div class="container col align-self-center">
                <h2 class="text-center text-info">{{smartphone.marca}}</h2>
                <h2 class="display-4 text-center fw-bold" style="font-weight: bold;">{{smartphone.modelo}}</h2>
                {{#if smartphone.precio}}
                    <div class="row detailCard">
                        <div class="col">
                            <div class="d-flex flex-column">
                                <h3 class="mt-3">Precio</h3>
                                <h5 class="text-success my-1">$ {{smartphone.precio}}</h5>
                            </div>
                        </div>
                    </div>
                {{/if}}
                {{#if smartphone.color}}
                    <div class="row detailCard">
                        <div class="col">
                            <div class="d-flex flex-column">
                                <h3 class="mt-3">Color</h3>
                                <h5 class="my-1">{{smartphone.color}}</h5>
                            </div>
                        </div>
                    </div>
                {{/if}}
                {{#if smartphone.almacenamientoGB}}
                    <div class="row detailCard">
                        <div class="col">
                            <div class="d-flex flex-column">
                                <h3 class="mt-3">Capacidad de almacenaje</h3>
                                <h5 class="my-1">{{smartphone.almacenamientoGB}}GB</h5>
                            </div>
                        </div>
                    </div>
                {{/if}}
                {{#if smartphone.ramGB}}
                <div class="row detailCard">
                    <div class="col">
                        <div class="d-flex flex-column">
                            <h3 class="mt-3">Memoria RAM</h3>
                            <h5 class="my-1">{{smartphone.ramGB}}GB</h5>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="text-right">
            <a href="/smartphones/editar-smartphone/{{smartphone._id}}" class="btn btn-primary py-2 px-3">Editar</a>
            <!-- Boton modal -->
            <button type="button" class="btn btn-danger py-2 px-3" data-toggle="modal" data-target="#dialogoConfirmacion">
                Eliminar
            </button>
            
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="dialogoConfirmacion" tabindex="-1" role="dialog" aria-labelledby="dialogoConfirmacionLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dialogoConfirmacionLabel">Eliminar {{smartphone.marca}} {{smartphone.modelo}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Estás a punto de eliminar {{smartphone.marca}} {{smartphone.modelo}}, <br> ¿Confirmar?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                <form action="http://localhost:3000/api/{{smartphone._id}}?isDelete=true" method="post">
                    <button id="boton-eliminar" type="submit"
                        class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>
