{{#each this}}
    <div class="col-sm d-flex justify-content-center">
        <div class="card border-secondary mb-4 bg-primary text-light" style="max-width: 12rem; min-width:12rem">
            <img class="card-img-top bg-light py-3" style="height: 10rem" src="{{this.imagen}}"
                onerror="this.src='https://www.iconpacks.net/icons/2/free-mobile-phone-icon-2636-thumb.png'">
            <div class="card-body text-text">
                <h5 class="card-title text-center">{{this.modelo}}</h5>
                {{#if this.marca}}
                    <p class="card-subtitle text-xl-right text-info">{{this.marca}}</p>
                {{/if}}
            </div>
            <div class="card-footer text-right border-secondary">
                <a href="/smartphones/{{this._id}}" class="btn btn-secondary">Detalles</a>
            </div>
        </div>
    </div>
{{/each}}
